{
  "name": "tachyons",
  "version": "4.5.3",
  "description": "Functional CSS for humans",
  "author": "mrmrs",
  "style": "css/tachyons.min.css",
  "main": "css/tachyons.css",
  "files": [
    "css",
    "src"
  ],
  "repository": "tachyons-css/tachyons",
  "keywords": [
    "css",
    "oocss",
    "postcss",
    "functional css",
    "design",
    "responsive",
    "performance"
  ],
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "browser-sync": "^2.9.6",
    "clean-css": "^3.4.19",
    "copy-files": "^0.1.0",
    "immutable-css-cli": "^1.1.1",
    "node-minify": "^1.3.7",
    "normalize.css": "^4.2.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.8",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-conditionals": "^2.0.0",
    "postcss-css-variables": "^0.5.0",
    "postcss-custom-media": "^5.0.0",
    "postcss-import": "^8.1.2",
    "tachyons-cli": "^1.0.8",
    "tachyons-modules": "^1.1.8",
    "watch": "^0.19.2"
  },
  "contributors": [
    {
      "name": "adam morse",
      "email": "hi@mrmrs.cc"
    },
    {
      "name": "john otander",
      "url": "http://johnotander.com"
    }
  ],
  "scripts": {
    "start": "parallelshell 'npm run build:css' npm run server",
    "server": "browser-sync start --server --files 'css/*.css, *.html",
    "build:css": "tachyons src/tachyons.css > css/tachyons.css",
    "build:min": "tachyons src/tachyons.css -m > css/tachyons.min.css",

    "mutations": "immutable-css src/tachyons.css --strict",

    "build": "npm run build:css && npm run build:minify",

    "build:minify": "tachyons src/tachyons.css -m > css/tachyons.min.css",

    "build:watch": "watch 'npm run build' ./src/",

    "server": "browser-sync start --server --files 'css/*.css, *.html'"
  }
}
